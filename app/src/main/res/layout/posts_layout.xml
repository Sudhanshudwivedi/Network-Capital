<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="1dp"
        app:cardCornerRadius="2dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:padding="4dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/post_profile_img"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/user"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/post_users_name"
                        android:text="Sudhanshu"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:textAlignment="textStart"
                        android:layout_gravity="start"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="6dp">


                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text="has been updated a post"
                            android:textColor="#c8c878"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <TextView
                android:text="post description here"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/post_desc"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:padding="3dp"
                android:textColor="#000000"
                android:textSize="14sp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="3dp"
                android:adjustViewBounds="true"
                android:visibility="gone"
                android:scaleType="centerCrop"
                />

            <LinearLayout
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                >

                <ImageButton
                    android:id="@+id/dislike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dislike"/>

                <TextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:layout_marginTop="-4dp"
                    android:textColor="@color/black"
                    android:text=" 0 likes"
                    android:id="@+id/display_no_of_likes"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/l1"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <ImageButton
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:src="@drawable/baseline_comment_black_24dp"/>

                <TextView

                    android:id="@+id/comment"
                    android:layout_gravity="end"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comments"/>
                </LinearLayout>
                
            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

    <!--<View-->
        <!--android:id="@+id/v1"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="4dp"-->
        <!--android:layout_below="@id/post"-->
        <!--android:layout_marginTop="100dp"-->
        <!--android:background="#d6d1d1"></View>-->


</RelativeLayout>