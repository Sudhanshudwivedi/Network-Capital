    <RelativeLayout
        android:id="@+id/options_rel"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/relat1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#922cc9">





            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img1"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true"
                app:civ_circle_background_color="#a632e5"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/white"
                android:src="@drawable/baseline_waves_white_48dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />


            <TextView
                android:layout_below="@+id/img1"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textSize="18dp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:text="Pick your interests"
                android:id="@+id/text_1"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>



        <TextView
            android:id="@+id/text_highlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relat1"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/yatra_one"
            android:text="Pick only one option in which you want help"
            android:textColor="#555555"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_below="@id/text_highlight"
            android:id="@+id/b1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp">


        <Button
            android:id="@+id/mba"
            android:text="MBA"
            android:layout_weight="0.5"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/background_color"
            android:background="@drawable/buttonselect"
            android:onClick="onClick"/>

    <Button
        android:id="@+id/entre"
        android:text="Entrepreneurship"
        android:layout_marginTop="5dp"
        android:layout_width="160dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:layout_height="30dp"
        android:textColor="@color/background_color"
        android:background="@drawable/buttonselect"
        android:onClick="onClick"/>



    <Button
        android:id="@+id/startup"
        android:layout_weight="0.8"
        android:text="Startups"
        android:layout_width="90dp"
        android:layout_marginRight="20dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/background_color"
        android:background="@drawable/buttonselect"
        android:onClick="onClick"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/b2"
            android:layout_below="@id/b1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp">

        <Button
            android:id="@+id/business"
            android:text="Business Development"
            android:layout_width="190dp"
            android:layout_weight="0.5"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/background_color"
            android:background="@drawable/buttonselect"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/fund"
            android:text="Funding"
            android:layout_marginTop="20dp"
            android:layout_width="80dp"
            android:layout_weight="0.5"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_height="30dp"
            android:textColor="@color/background_color"
            android:background="@drawable/buttonselect"
            android:onClick="onClick"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/b3"
            android:layout_below="@id/b2"
            android:layout_width="match_parent"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content">

        <Button
            android:id="@+id/project"
            android:text="Project Management"
            android:layout_width="190dp"
            android:layout_weight="0.5"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/background_color"
            android:background="@drawable/buttonselect"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/mentor"
            android:text="Mentorship"
            android:layout_marginTop="20dp"
            android:layout_width="110dp"
            android:layout_weight="0.5"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_height="30dp"
            android:textColor="@color/background_color"
            android:background="@drawable/buttonselect"
            android:onClick="onClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/b3"
            android:id="@+id/b4"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
            android:id="@+id/collab"
            android:text="Collaboration"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_weight="0.5"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/background_color"
            android:background="@drawable/buttonselect"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/network"
            android:text="Networking"
            android:layout_marginTop="20dp"
            android:layout_width="110dp"
            android:layout_weight="0.5"
            android:layout_marginRight="20dp"
            android:layout_height="30dp"
            android:textColor="@color/background_color"
            android:background="@drawable/buttonselect"
            android:onClick="onClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/b4"
            android:id="@+id/b5"
            android:paddingBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
            android:id="@+id/marketing"
            android:text="Marketing Strategy"
            android:layout_below="@+id/security"
            android:layout_marginTop="20dp"
            android:layout_width="180dp"
            android:layout_weight="1"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_height="30dp"
            android:textColor="@color/background_color"
            android:background="@drawable/buttonselect"
            android:onClick="onClick"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/b6"
            android:layout_below="@id/b5"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
            android:id="@+id/security"
            android:text="Security"
            android:layout_width="90dp"
            android:layout_weight="0.5"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/background_color"
            android:background="@drawable/buttonselect"
            android:onClick="onClick"/>





        <Button
            android:id="@+id/virtual"
            android:text="Virtual Reality"
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_weight="0.5"
            android:layout_marginRight="20dp"
            android:layout_height="30dp"
            android:textColor="@color/background_color"
            android:background="@drawable/buttonselect"
            android:onClick="onClick"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/b7"
            android:orientation="horizontal"
            android:layout_below="@id/b6"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="60dp"
            android:layout_height="wrap_content">


        <Button
            android:id="@+id/product"
            android:text="Product Development"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_weight="0.5"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="30dp"
            android:textColor="@color/background_color"
            android:background="@drawable/buttonselect"
            android:onClick="onClick"/>
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>

</ScrollView>

    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/loginbutton_selector"
        android:onClick="onClick"
        android:text="Choose only 1"
        android:textColor="@color/background_color" />

</RelativeLayout>