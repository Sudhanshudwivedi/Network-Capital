<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/rle1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.network.android.networkcapital.PrimaryFragment">


            <!--<EditText-->
            <!--android:id="@+id/hlp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="74dp"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:hint="NEED HELP IN?"-->
            <!--android:paddingLeft="10dp"/>-->

            <!--<Button-->
            <!--android:id="@+id/search"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/hlp"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:background="@drawable/loginbutton_selector"-->
            <!--android:text="SUBMIT" />-->

            <RelativeLayout
                android:id="@+id/options_rel"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RelativeLayout
                    android:id="@+id/relat1"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@color/background_color">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="25dp"
                        android:src="@drawable/baseline_waves_white_48dp"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="1dp"
                        app:civ_circle_background_color="#3B5998" />


                    <TextView
                        android:id="@+id/text_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img1"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif"
                        android:text="Short Term Goal"
                        android:textColor="@color/white"

                        android:textSize="18dp"
                        android:textStyle="bold" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/text_highlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relat1"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Pick only one option in which you want help"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <LinearLayout
                    android:layout_below="@id/text_highlight"
                    android:id="@+id/b1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp">


                    <Button
                        android:id="@+id/mba"
                        android:text="MBA Further Studies"
                        android:layout_weight="0.5"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:textColor="@color/background_color"
                        android:background="@drawable/buttonselect"
                        android:onClick="onClick"/>







                </LinearLayout>

                <LinearLayout
                    android:id="@+id/b2"
                    android:layout_below="@id/b1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp">

                    <Button
                        android:id="@+id/business"
                        android:text="Changing Careers"
                        android:layout_width="100dp"
                        android:layout_weight="0.5"
                        android:layout_height="30dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/background_color"
                        android:background="@drawable/buttonselect"
                        android:onClick="onClick"/>

                    <Button
                        android:id="@+id/fund"
                        android:text="Resume Advice"
                        android:layout_marginTop="20dp"
                        android:layout_width="80dp"
                        android:layout_weight="0.5"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:layout_height="30dp"
                        android:textColor="@color/background_color"
                        android:background="@drawable/buttonselect"
                        android:onClick="onClick"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/b3"
                    android:layout_below="@id/b2"
                    android:layout_width="match_parent"
                    android:paddingBottom="5dp"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/project"
                        android:text="Finding Right Career"
                        android:layout_width="100dp"
                        android:layout_weight="0.5"
                        android:layout_height="30dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="50dp"
                        android:textColor="@color/background_color"
                        android:background="@drawable/buttonselect"
                        android:onClick="onClick"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_below="@id/b3"
                    android:id="@+id/b4"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/collab"
                        android:text="Scaling Startups"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.5"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/background_color"
                        android:background="@drawable/buttonselect"
                        android:onClick="onClick"/>

                    <Button
                        android:id="@+id/network"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/buttonselect"
                        android:onClick="onClick"
                        android:text="Raising Capital"
                        android:textColor="@color/background_color" />

                </LinearLayout>

                <LinearLayout
                    android:layout_below="@id/b4"
                    android:id="@+id/b5"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/marketing"
                        android:text="Raising Support for Cause"
                        android:layout_below="@+id/security"
                        android:layout_marginTop="20dp"
                        android:layout_width="180dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_height="30dp"
                        android:textColor="@color/background_color"
                        android:background="@drawable/buttonselect"
                        android:onClick="onClick"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/b6"
                    android:layout_below="@id/b5"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="60dp"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/security"
                        android:text="Leadership Coaching"
                        android:layout_width="100dp"
                        android:layout_weight="0.5"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginLeft="50dp"
                        android:textColor="@color/background_color"
                        android:background="@drawable/buttonselect"
                        android:onClick="onClick"/>




                </LinearLayout>



            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/connection_button"
        android:onClick="onClick"
        android:text="Choose only 1"

        android:textColor="@color/white" />

</RelativeLayout>