<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/help_single_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="47dp"
        android:src="@drawable/user"
        app:srcCompat="@drawable/user"
        android:layout_marginLeft="30dp" />

    <TextView
        android:id="@+id/help_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/help_single_image"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/help_single_image"
        android:layout_toRightOf="@+id/help_single_image"
        android:text="Display Name"
        android:textColor="@color/black"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/help_single_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/help_single_image"
        android:layout_alignStart="@+id/help_single_name"
        android:layout_marginBottom="18dp"
        android:text="Position"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    <ImageView
        android:id="@+id/help_single_online_icon"
        android:layout_width="8dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/help_single_name"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/help_single_name"
        android:visibility="invisible"
        app:srcCompat="@drawable/online_icon" />

    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="123dp"
        android:background="#d6d1d1"></View>

</RelativeLayout>