<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/help_single_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/user"
        app:srcCompat="@drawable/user"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/help_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/help_single_image"
        android:layout_toRightOf="@+id/help_single_image"
        android:text="Display Name"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/help_single_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/help_single_name"
        android:layout_alignLeft="@+id/help_single_name"
        android:layout_marginTop="3dp"
        android:textSize="14sp"
        android:inputType="textMultiLine"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        />
    <ImageView
        android:id="@+id/help_single_online_icon"
        android:layout_width="8dp"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignTop="@+id/help_single_image"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/help_single_name"
        android:visibility="invisible"
        app:srcCompat="@drawable/online_icon" />

    <View
        android:id="@+id/v1"
        android:layout_width="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/help_single_status"
        android:layout_toRightOf="@id/help_single_image"
        android:background="#24000000"></View>

</RelativeLayout>

