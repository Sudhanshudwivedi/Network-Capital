<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">


        <RelativeLayout
            android:id="@+id/rel1"
            android:background="@drawable/top_background"
            android:layout_width="match_parent"
            android:layout_marginTop="-5dp"
            android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_nc"
                    android:src="@mipmap/nci_capit"
                    android:layout_width="150dp"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent"
                    android:layout_centerHorizontal="true"
                    android:layout_height="100dp" />

                <TextView
                    android:id="@+id/login"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_nc"
                    android:layout_marginBottom="60dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:paddingTop="-2dp"
                    android:text="Sign Up"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />

        </RelativeLayout>


        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/login_layout"
            android:elevation="1.5dp"
            android:background="@drawable/card"
            android:layout_width="match_parent"
            android:layout_below="@+id/rel1"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp"
            android:layout_marginTop="-55dp"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:paddingTop="5dp">

                <EditText
                    android:id="@+id/fullName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:drawableLeft="@mipmap/user"
                    android:drawableTint="@color/black"
                    android:background="@android:color/transparent"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="Full Name"
                    android:inputType="textCapWords"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:textColorHint="#76000000"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@null"
                    android:textSize="16sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/black" />


                <EditText
                    android:id="@+id/userEmailId"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@mipmap/email_icon"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="Email"
                    android:inputType="textWebEmailAddress"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@null"
                    android:textColorHint="#76000000"
                    android:textSize="16sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/black" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@mipmap/lock_close"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:hint="Enter Password"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#76000000"
                    android:textCursorDrawable="@null"
                    android:textSize="16sp" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:background="@color/black" />


                <EditText
                    android:id="@+id/confirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@mipmap/lock_close"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/black"
                    android:gravity="center_vertical"
                    android:hint="Re-Enter Password"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#76000000"
                    android:textCursorDrawable="@null"
                    android:textSize="16sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_height="1px"
                    android:background="@color/black" />

                <CheckBox
                    android:layout_marginLeft="12dp"
                    android:id="@+id/cbShowPwd"
                    android:paddingLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#9b9999"
                    android:textSize="16sp"
                    android:text="@string/show_pwd" />


        </LinearLayout>




