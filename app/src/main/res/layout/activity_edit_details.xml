<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel1"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="150dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_width="70dp"
            android:src="@drawable/user"
            android:layout_height="70dp" />

        <Button
            android:id="@+id/upload"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Upload Image"
            android:background="@drawable/loginbutton_selector"
            android:textColor="@color/background_color"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_below="@id/image2"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel2"
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:text="Fill all your details"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:id="@+id/location"
            android:layout_below="@id/details"
            android:text="Location"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:background="@drawable/edit_button"
            android:layout_below="@+id/location"
            android:id="@+id/loca"
            android:paddingLeft="20dp"
            android:hint="Current Location"
            android:layout_marginTop="5dp"
            android:layout_width="350dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/job"
            android:layout_marginTop="10dp"
            android:layout_below="@id/loca"
            android:text="Current Job"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:background="@drawable/edit_button"
            android:layout_below="@+id/job"
            android:id="@+id/edit_job"
            android:paddingLeft="20dp"
            android:hint="Role"
            android:layout_marginTop="8dp"
            android:layout_width="350dp"
            android:layout_height="30dp" />

        <EditText
            android:background="@drawable/edit_button"
            android:layout_below="@+id/edit_job"
            android:id="@+id/edit_job1"
            android:paddingLeft="20dp"
            android:hint="Company"
            android:layout_marginTop="8dp"
            android:layout_width="350dp"
            android:layout_height="30dp" />

        <EditText
            android:background="@drawable/edit_button"
            android:layout_below="@+id/edit_job1"
            android:id="@+id/edit_job2"
            android:paddingLeft="20dp"
            android:hint="Date of Joining"
            android:layout_marginTop="8dp"
            android:layout_width="350dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/education"
            android:layout_marginTop="10dp"
            android:layout_below="@id/edit_job2"
            android:text="Education"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:background="@drawable/edit_button"
            android:layout_below="@+id/education"
            android:id="@+id/edit_edu"
            android:paddingLeft="20dp"
            android:hint="Degree"
            android:layout_marginTop="8dp"
            android:layout_width="350dp"
            android:layout_height="30dp" />

        <EditText
            android:background="@drawable/edit_button"
            android:layout_below="@+id/edit_edu"
            android:id="@+id/edit_edu1"
            android:paddingLeft="20dp"
            android:hint="Institute"
            android:layout_marginTop="8dp"
            android:layout_width="350dp"
            android:layout_height="30dp" />

        <EditText
            android:background="@drawable/edit_button"
            android:layout_below="@+id/edit_edu1"
            android:id="@+id/edit_edu2"
            android:paddingLeft="20dp"
            android:hint="Class"
            android:layout_marginTop="8dp"
            android:layout_width="350dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/work"
            android:layout_marginTop="10dp"
            android:layout_below="@id/edit_edu2"
            android:text="Work Ex."
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:background="@drawable/edit_button"
            android:layout_below="@+id/work"
            android:id="@+id/edit_work1"
            android:paddingLeft="20dp"
            android:hint="Role"
            android:layout_marginTop="8dp"
            android:layout_width="350dp"
            android:layout_height="30dp" />

        <EditText
            android:background="@drawable/edit_button"
            android:layout_below="@+id/edit_work1"
            android:id="@+id/edit_work2"
            android:paddingLeft="20dp"
            android:hint="Company"
            android:layout_marginTop="8dp"
            android:layout_width="350dp"
            android:layout_height="30dp" />

        <EditText
            android:background="@drawable/edit_button"
            android:layout_below="@+id/edit_work2"
            android:id="@+id/edit_work3"
            android:paddingLeft="20dp"
            android:hint="Date of Join.."
            android:layout_marginTop="8dp"
            android:layout_width="135dp"
            android:layout_height="30dp" />

        <EditText
            android:background="@drawable/edit_button"
            android:layout_below="@+id/edit_work2"
            android:id="@+id/edit_work4"
            android:paddingLeft="20dp"
            android:hint="Date of Leaving"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_width="160dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/help"
            android:layout_marginTop="10dp"
            android:layout_below="@id/edit_work3"
            android:text="I can help in... "
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_below="@id/edit_work3"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text="Add"/>

        <ImageView
            android:id="@+id/n1"
            android:src="@drawable/baseline_add_black_48dp"
            android:layout_marginTop="12dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp"
            android:layout_width="21dp"
            android:layout_height="21dp" />

        </RelativeLayout>

        <TextView
            android:background="@drawable/edit_button"
            android:layout_below="@+id/rl1"
            android:id="@+id/help_text"
            android:paddingLeft="20dp"
            android:hint="Project Management..."
            android:layout_marginTop="8dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/looking"
            android:layout_marginTop="10dp"
            android:layout_below="@id/help_text"
            android:text="I am looking for..."
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_below="@id/help_text"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text="Add"/>

            <ImageView
                android:id="@+id/n2"
                android:src="@drawable/baseline_add_black_48dp"
                android:layout_marginTop="12dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="7dp"
                android:layout_width="21dp"
                android:layout_height="21dp" />

        </RelativeLayout>

        <TextView
            android:background="@drawable/edit_button"
            android:layout_below="@+id/looking"
            android:id="@+id/look_text"
            android:paddingLeft="20dp"
            android:hint="MBA..."
            android:layout_marginTop="8dp"
            android:textSize="18dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/goals"
            android:layout_marginTop="10dp"
            android:layout_below="@id/look_text"
            android:text="Your short-term career goals"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/rl3"
            android:layout_below="@id/look_text"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text="Add"/>

            <ImageView
                android:id="@+id/n3"
                android:src="@drawable/baseline_add_black_48dp"
                android:layout_marginTop="12dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="7dp"
                android:layout_width="21dp"
                android:layout_height="21dp" />

        </RelativeLayout>

        <TextView
            android:background="@drawable/edit_button"
            android:layout_below="@+id/rl3"
            android:id="@+id/goal_text"
            android:paddingLeft="20dp"
            android:hint="Skills..."
            android:layout_marginTop="8dp"
            android:textSize="18dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/save_button"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="Save"
            android:background="@drawable/loginbutton_selector"
            android:layout_centerInParent="true"
            android:textColor="@color/background_color"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_below="@id/goal_text"
            android:layout_width="130dp"
            android:layout_height="50dp" />
        </RelativeLayout>


